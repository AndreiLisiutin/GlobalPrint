@model Printer_PrintViewModel
@{
    ViewBag.Title = "GlobalPrint Home";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@section Scripts{
    <script type="text/javascript" src="http://gregpike.net/demos/bootstrap-file-input/bootstrap.file-input.js"></script>
    <script src="~/Resources/Scripts/printer/print.js"></script>
}
@section Stylesheets {
}
<div class="container">
    @using (Html.BeginForm("Print", "Printer", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, "Ошибки: ")
            </div>
        }
        <h2>Информация для печати</h2>
        @Html.HiddenFor(e => e.printer.PrinterID)
        @Html.HiddenFor(e => e.printer.BlackWhitePrintPrice)
        @Html.HiddenFor(e => e.printer.Latitude)
        @Html.HiddenFor(e => e.printer.Longtitude)
        @Html.HiddenFor(e => e.printer.UserID)
        @Html.HiddenFor(e => e.printer.PrinterID)
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Название принтера</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.printer.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Расположение принтера</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.printer.Location, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Цена ч/б печати</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.printer.BlackWhitePrintPriceInCurrency, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Файл для печати</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(e => e.fileToPrint, new { @type="file", @data_filename_placement = "inside", @title ="Выберите файл" })
                @*<input type="file" title="Выберите файл" data-filename-placement="inside">*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <input type="submit" value="Печать" class="btn btn-default" />
            </div>
        </div>
    }
</div>

