@using GlobalPrint.ServerBusinessLogic.Models.Domain.Printers
@using GlobalPrint.ServerBusinessLogic.Models.Domain.Offers
@using Resources.ClientWeb.Order

@using GlobalPrint.ClientWeb.Models.PrinterController
@model Printer_MyPrinters
@{
    ViewBag.Title = MyPrintersViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container">

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger container margin-top-20">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, Resources.Resource.ValidationErrors + ": ")
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-4">@MyPrintersViewResource.PrinterNameHeader</th>
                <th class="col-md-7">@MyPrintersViewResource.LocationHeader</th>
                <th class="col-md-1">@MyPrintersViewResource.ActionsHeader</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PrinterList != null)
            {
                foreach (Printer printer in Model.PrinterList)
                {
                    <tr>
                        <td class="col-md-4">@Html.DisplayFor(c => printer.Name)</td>
                        <td class="col-md-7">@Html.DisplayFor(c => printer.Location)</td>
                        <td class="table-col-buttons">
                            <a href="@Url.Action("Edit", "Printer", new { @PrinterID = printer.ID })" title=@MyPrintersViewResource.EditButtonTooltip
                                class="btn btn-default glyphicon glyphicon-pencil"></a>
                            @Ajax.ActionLink(" ", "Delete", new { PrinterID = printer.ID }, new AjaxOptions { HttpMethod = "POST" }, 
                                new { @class = "btn btn-default glyphicon glyphicon-trash", @title = MyPrintersViewResource.DeleteButtonTooltip })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-sm-12">
            @Html.ActionLink(MyPrintersViewResource.AddButtonLabel, "Create", "Printer", new { }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
