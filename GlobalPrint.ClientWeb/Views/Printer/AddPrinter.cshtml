@using Microsoft.AspNet.Identity
@model Printer
@{
    ViewBag.Title = "Новый принтер";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container">
    <h2>Новый принтер</h2>

    @using (Html.BeginForm("AddPrinter", "Printer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, "Ошибки: ")
            </div>
        }

        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Название</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text", @placeholder = "Название принтера", @required = "true", @autofocus = true })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Расположение</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @type = "text", @placeholder = "Расположение", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Долгота</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Latitude, new { @class = "form-control", @type = "text", @placeholder = "Долгота", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Широта</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Longtitude, new { @class = "form-control", @type = "text", @placeholder = "Широта", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Телефон</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "phone", @placeholder = "Телефон", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-left">Стоимость распечатки</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.BlackWhitePrintPrice, new { @class = "form-control", @value = "0", @type = "currency", @placeholder = "Стоимость распечатки", @required = "true" })
            </div>
        </div>

        @Html.HiddenFor(x => x.PrinterID)
        @Html.HiddenFor(x => x.UserID)

        <div class="form-group">
            <div class="col-sm-10">
                <button class="btn btn-default" type="submit">Сохранить</button>
            </div>
        </div>
    }
</div>
