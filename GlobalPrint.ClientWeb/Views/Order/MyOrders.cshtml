@using Resources.ClientWeb.Order
@using GlobalPrint.ServerBusinessLogic.Models.Domain.Orders
@using GlobalPrint.ServerBusinessLogic.Models.Business.Orders
@model List<PrintOrderInfo>
@{
    ViewBag.Title = MyOrdersViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

@section Scripts {
    <script src="~/Resources/Scripts/GlobalPrint/PrintOrder/PrintOrder.js"></script>
}

<div class="container">
    @using (Html.BeginForm("MyOrders", "Order", FormMethod.Get, new { @class = "form-horizontal", role = "form", id = "userPrintOrderListForm" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, Resources.Resource.ValidationErrors + ": ")
            </div>
        }

        <div class="form-inline gp-data-filter focus">
            <label class="control-label">@MyOrdersViewResource.OrderIdFilter</label>
            @Html.TextBox("printOrderID", "", htmlAttributes: new { @class = "form-control", @id = "printOrderIdFilter" })
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-1">@MyOrdersViewResource.OrderIdHeader</th>
                    <th class="col-md-3">@MyOrdersViewResource.PrinterHeader</th>
                    <th class="col-md-2">@MyOrdersViewResource.DocumentHeader</th>
                    <th class="col-md-2">@MyOrdersViewResource.OrderDateHeader</th>
                    <th class="col-md-2">@MyOrdersViewResource.PriceHeader</th>
                    <th class="col-md-1">@MyOrdersViewResource.CodeHeader</th>
                    <th class="col-md-2">@MyOrdersViewResource.StatusHeader</th>
                    <th class="col-md-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PrintOrderInfo printOrder in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.ID)</td>
                        <td>@Html.DisplayFor(c => printOrder.Printer.Name)</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.DocumentName)</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.OrderedOn, "{0:dd.MM.yyyy HH:mm:ss}")</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.FullPrice, "{0:0.00}")</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.SecretCode)</td>
                        <td>@Html.DisplayFor(c => printOrder.Status.Status)</td>
                        <td>
                            <a href="@Url.Action("Details", "Order", new { @printOrderID = printOrder.PrintOrder.ID })" title=@MyOrdersViewResource.DetailsButtonLabel class="btn btn-default glyphicon glyphicon-pencil"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
