@using GlobalPrint.ServerBusinessLogic.Models.Domain.Orders
@model PrintOrder
@{
    ViewBag.Title = "Ваш заказ отправлен в печать";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container">

    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <h2>Ваш заказ отправлен в печать</h2>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Номер заказа</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Дата и время заказа</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.OrderedOn, "{0:dd.MM.yyyy HH:mm:ss}", new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Количество страниц</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.PagesCount, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">Стоимость</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.PriceInCurrency, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                @Html.ActionLink("Мои заказы", "MyOrders", "Order", new { }, new { @class = "btn btn-default" })
                @Html.ActionLink("На главную", "Index", "Home", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>