@using Resources.ClientWeb.Order
@using GlobalPrint.ServerBusinessLogic.Models.Business.Orders
@using GlobalPrint.ServerBusinessLogic.Models.Business.Printers

@model NewOrder
@{
    ViewBag.Title = ConfirmViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";

    decimal FullPrice = (decimal)ViewBag.FullPrice;
    string FullPriceFormatted = String.Format("{0:0.00}", FullPrice);
    PrinterServiceExtended PrinterService = (PrinterServiceExtended)ViewBag.PrinterService;
    int PagesCount = (int)ViewBag.PagesCount;
}

<div class="container">
    @using (Html.BeginForm("Create", "Order", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, Resources.Resource.ValidationErrors + ": ")
            </div>
        }
        <h2>@ConfirmViewResource.FormHeaderText</h2>
        <div class="hidden">
            @Html.EditorForModel()
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmViewResource.PagesCountFieldLabel</label>
            <div class="col-sm-9">
                @Html.TextBox("PagesCount", PagesCount, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmViewResource.PriceFieldLabel</label>
            <div class="col-sm-9">
                <div class="input-group">
                    @Html.TextBox("PriceInCurrency", FullPriceFormatted, new { @class = "form-control text-right", @readonly = "readonly" })
                    <div class="input-group-addon">руб.</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="submit" value="Печать" class="btn btn-default" />
                <a href="@Request.UrlReferrer" class="btn btn-default"><i class="icon-circle-arrow-left"></i>@ConfirmViewResource.CancelButtonLabel</a>
                @Html.ActionLink(Resources.Resource.GotoMainPage, "Index", "Home", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
