@using Resources.ClientWeb.Home

@{
    ViewBag.Title = IndexViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

@section Scripts{
    <script src="https://maps.google.com/maps/api/js" type="text/javascript"></script>
    <script src="~/Resources/Scripts/GlobalPrint/Home/Index.js"></script>
}
@section Stylesheets {
    <link href="~/Resources/Stylesheets/home/index.css" rel="stylesheet" />
}
<div class="container-full">

    <div id="homeInfoSidebar" class="home-info-sidebar hidden fixed-top col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <form class="form-horizontal" role="form">
            <input type="hidden" id="printerInfoPrinterID" />
            <div>
                <div class="form-group row">
                    <label for="printerInfoIsAvailable" class="control-label vertical-center text-left">@IndexViewResource.AvailableFieldLabel</label>
                    <input type="checkbox" class="printer-info-is-available form-control" disabled="disabled" id="printerInfoIsAvailable" />
                    <label class="control-label vertical-center" for="printerInfoIsAvailable"></label>
                </div>
                <div class="form-group">
                    <label class="control-label text-left">@IndexViewResource.PrintOperatorFieldLabel</label>
                    <div>
                        <textarea rows="10" class="form-control" readonly="readonly" id="printerInfoOperator"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label text-left">@IndexViewResource.PricingFieldLabel</label>
                    <div>
                        <textarea rows="5" class="form-control" readonly="readonly" id="printerInfoPrices"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button class="btn btn-default" type="button" id="printerInfoPrint">@IndexViewResource.PrintButtonLabel</button>
                    <button class="btn btn-default" type="button" id="printerInfoClose">@IndexViewResource.CloseButtonLabel</button>
                </div>
            </div>
        </form>
    </div>

    <div class="home-info-controls">
        <div id="homeIndoControlFindMe" class="home-info-control" data-toggle="tooltip" data-placement="left" data-container="body" title=@IndexViewResource.CurrentLocationButtonLabel>
            <div class="home-info-control-find-me home-info-control-image">
            </div>
        </div>
        <div id="homeInfoControlClosestPrinter" class="home-info-control" data-toggle="tooltip" data-placement="left" data-container="body" title=@IndexViewResource.NearestPrinterButtonLabel>
            <div class="home-info-control-closest-printer home-info-control-image">
            </div>
        </div>
        <div id="homeInfoControlMyPrinters" class="home-info-control" data-toggle="tooltip" data-placement="left" data-container="body" title=@IndexViewResource.MyPrintersButtonLabel>
            <div class="home-info-control-my_printers home-info-control-image">
            </div>
        </div>
    </div>

    <div id="googlemaps" class="googlemaps">
    </div>

</div>