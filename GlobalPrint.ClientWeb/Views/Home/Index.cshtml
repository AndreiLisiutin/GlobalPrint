@using GlobalPrint.ServerBusinessLogic.Models.Domain.Users
@{
    ViewBag.Title = "GlobalPrint Home";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

@section Scripts{
    <script src="https://maps.google.com/maps/api/js" type="text/javascript"></script>
    <script src="~/Resources/Scripts/GlobalPrint/Home/Index.js"></script>
}
@section Stylesheets {
    <link href="~/Resources/Stylesheets/home/index.css" rel="stylesheet" />
}
<div class="container-full relative">

    <div class="infoBox" id="homeInfoSidebar">
        <div class="infoTitle">
            <span></span> Информация о принтере
        </div>
        <div class="insertTo">
            <form class="form-horizontal" role="form">
                <input type="hidden" id="printerInfoPrinterID" />
                <div class="infoStatus">
                    <div class="infoStatusBox available">
                        <span></span> <div id="printerStatus" class="inline-block">Сейчас доступен</div>
                    </div>
                </div>

                <div class="infoAbout">
                    <div class="aboutTitle">Оператор печати</div>
                    <div class="aboutInput">
                        <div class="aboutFInput" id="printerInfoLocation">
                            HP Korzilla.ru<br>
                            Машиностроительная улица 91,<br>
                            Набережные Челны, Татарстан,<br>
                            Россия<br>
                        </div>
                    </div>
                </div>

                <div class="infoAbout">
                    <div class="aboutTitle">Услуги и цены</div>
                    <div class="aboutInput">
                        <div class="aboutFInput" id="printerInfoPrices">
                            Печать А4 Чёрно-белая: 20 руб.
                        </div>
                    </div>
                </div>
                @if (ViewContext.HttpContext.User.IsInRole(UserRolesEnum.Admin))
                {
                    <div class="infoAbout">
                        <div class="aboutTitle">Контакты</div>
                        <div class="aboutInput">
                            <div class="aboutFInput" id="printerInfoEmail">
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>

        <div align="center">
            <button class="defaultButton coloredBtn white-text printer-info-btn" type="button" id="printerInfoPrint">Печать</button>
            <button class="defaultButton coloredBtn white-text printer-info-btn" id="printerInfoClose">Закрыть</button>
        </div>
    </div>

    <div class="home-info-controls">
        <div id="homeIndoControlFindMe" class="home-info-control" title="Текущее положение">
            <div class="home-info-control-find-me home-info-control-image">
            </div>
        </div>
        <div id="homeInfoControlClosestPrinter" class="home-info-control" title="Ближайший принтер">
            <div class="home-info-control-closest-printer home-info-control-image">
            </div>
        </div>
        <div id="homeInfoControlMyPrinters" class="home-info-control" title="Только мои принтеры">
            <div class="home-info-control-my_printers home-info-control-image">
            </div>
        </div>
    </div>

    <div id="googlemaps" class="googlemaps">
    </div>

</div>