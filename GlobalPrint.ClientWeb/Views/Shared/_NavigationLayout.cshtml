@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
<nav class="navbar main-navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/Home/Index"><img src="~/Resources/Documents/Logo/main_logo.png" style="max-width: 150px;margin-top: -20px;"></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>
@RenderBody()
<div id="footer"></div>

@section Scripts {
    <script src="~/Resources/Scripts/shared/navigation.js"></script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }
}

@section Stylesheets {
    @if (IsSectionDefined("Stylesheets"))
    {
        @RenderSection("Stylesheets")
    }
}