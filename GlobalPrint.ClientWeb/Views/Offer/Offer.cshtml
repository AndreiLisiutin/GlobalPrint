@using GlobalPrint.ServerBusinessLogic.BusinessLogicLayer.Models.Business.Offers
@model UserOfferExtended

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "Оферта";
}

@section Stylesheets {
    <link href="~/Resources/Stylesheets/shared/display-form.css" rel="stylesheet" />
}

<div class="display-form-content-large">
    <h2>@ViewBag.OfferTitle</h2>
    @if (ViewBag.OfferParagraphs != null)
    {
        @foreach (string paragraph in ViewBag.OfferParagraphs)
        {
            <p>@paragraph</p>
        }
    }   
</div>