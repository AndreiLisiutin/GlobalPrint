@using GlobalPrint.ClientWeb
@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Восстановление пароля";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@section Scripts{
    <script src="~/Resources/Scripts/GlobalPrint/Account/ForgotPassword.js"></script>
}

<div class="container verticalWrap">
    <div class="loginForm">
        <div class="loginTitle">Восстановление пароля</div>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "forgotPasswordForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="loginFormLabel input-wrapper">
                <p>E-Mail</p>
                @Html.TextBoxFor(m => m.Email, new { @class = "loginFormInput", @type = "email", @autofocus = true })
            </div>

            <div class="row" style="margin-top:15px;">
                <div class="col-md-7 col-xs-12"></div>
                <div class="col-md-5 col-xs-12" align="right">
                    <button class="goReg" type="submit">Восстановить</button>
                </div>
            </div>
        }

    </div>
</div>