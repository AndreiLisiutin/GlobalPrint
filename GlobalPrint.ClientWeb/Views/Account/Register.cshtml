@using GlobalPrint.ClientWeb
@using GlobalPrint.ClientWeb.Helpers
@using System.Globalization

@model RegisterViewModel
@{
	ViewBag.Title = "Регистрация";
	Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container verticalWrap">
	<div class="loginForm">
		<div class="loginTitle">
			Войдите с помощью
			<a href="#"><img src="~/Content/img/login_vk.png" alt="VK" /></a>
			<a href="#"><img src="~/Content/img/login_google.png" alt="Google+" /></a>
		</div>
		<div class="or">
			Или зарегистрируйтесь в форме ниже
		</div>

		@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
		{
			@Html.AntiForgeryToken()

			<div class="loginFormLabel">
				<p>E-Mail</p>
				@Html.TextBoxFor(m => m.Email, new { @class = "loginFormInput", @type = "email", @required = "true" })
			</div>
			<div class="loginFormLabel">
				<p>Имя пользователя</p>
				@Html.TextBoxFor(m => m.UserName, new { @class = "loginFormInput", @required = "true" })
			</div>
			<div class="loginFormLabel">
				<p>Пароль</p>
				@Html.TextBoxFor(m => m.Password, new { @class = "loginFormInput", @type = "password", @required = "true" })
			</div>
			<div class="loginFormLabel">
				<p>Подтвердите пароль</p>
				@Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "loginFormInput", @type = "password", @required = "true" })
			</div>

			<div class="row" style="margin-top:15px;">
				<div class="col-md-1 col-xs-2" style="text-align:center">
					@Html.CheckBoxFor(m => m.IsAgreeWithOffer, new { @required = "true", @class = "setClick" })
					<div class="loginCheckBox" onclick="$(this).toggleClass('checked'); $('.setClick').click();">
						<div class="checked"></div>
					</div>
				</div>
				<div class="col-md-6 col-xs-10" style="font-size: 11px;">
					<div class="row pink-link">
						Настоящим подтверждаю, что я ознакомлен <br>
						и согласен с условиями @Html.ActionLink("Оферты", "Offer", "Offer", new { }, new { target = "_blank" }) и <br>
						@Html.ActionLink("Политикой Конфиденциальности", "PrivacyPolicy", "Offer", new { }, new { target = "_blank" }).
					</div>
				</div>
				<div class="col-md-5 col-xs-12" align="right">
					<button class="goReg" type="submit">РЕГИСТРАЦИЯ</button>
				</div>
			</div>
		}		
	</div>
</div>
