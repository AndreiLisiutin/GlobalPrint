@using GlobalPrint.ClientWeb.Helpers
@using Resources.ClientWeb.Account

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = ResetPasswordConfirmationViewResource.ResetPasswordConfirmationFormTabTitle;
}

@section Stylesheets {
    <link href="~/Resources/Stylesheets/shared/display-form.css" rel="stylesheet" />
}

<div class="display-form-content">
    <h2>@ResetPasswordConfirmationViewResource.ResetPasswordConfirmationFormHeader</h2>
    <p>
        @ResetPasswordConfirmationViewResource.LoginLinkString
        @Html.ActionLink(ResetPasswordConfirmationViewResource.LoginLinkLabel, "Login", "Account") @ResetPasswordConfirmationViewResource.LoginStringAfterLink
    </p>
</div>