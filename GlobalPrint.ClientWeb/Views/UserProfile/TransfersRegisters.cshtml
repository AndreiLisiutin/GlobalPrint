@using GlobalPrint.ServerBusinessLogic.Models.Domain.TransfersRegisters
@using GlobalPrint.ClientWeb.Helpers;
@using GlobalPrint.ServerBusinessLogic.Models.Business.TransfersRegisters;

@model List<TransfersRegisterExtended>
@{
    ViewBag.Title = "Реестры перечислений";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}


<div class="container">

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger container margin-top-20">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, "Ошибки: ")
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">Номер</th>
                <th class="col-md-3">Дата формирования</th>
                <th class="col-md-3">Количество запросов</th>
                <th class="col-md-3">Общая сумма</th>
                <th class="col-md-2">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TransfersRegisterExtended register in Model)
            {
                <tr>
                    <td class="col-md-1">@Html.DisplayFor(c => register.TransfersRegister.ID)</td>
                    <td class="col-md-3">@Html.DisplayFor(c => register.TransfersRegister.CreatedOn)</td>
                    <td class="col-md-3">@Html.DisplayFor(c => register.RequestsCount)</td>
                    <td class="col-md-3">@Html.DisplayFor(c => register.AmountOfMoneySumm)</td>
                    <td class="table-col-buttons col-md-2">
                        <a href="@Url.Action("GetTransfersRegister", "Reports", new { @TransfersRegisterID = register.TransfersRegister.ID })" title="Загрузить" class="btn btn-default glyphicon glyphicon-download-alt"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        @using (Html.BeginForm("NewTransfersRegister", "UserProfile", FormMethod.Post, new { @class = "inline-block" }))
        {
            <button type="submit" class="btn btn-default">Сформировать</button>
        }
        @Html.ActionLink("На главную", "Index", "Home", new { }, new { @class = "btn btn-default" })
    </div>
</div>
