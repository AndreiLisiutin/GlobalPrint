@using GlobalPrint.ServerBusinessLogic.Models.Business.Payments
@using System.Globalization

@model List<PaymentActionFullInfo>
@{
    ViewBag.Title = "История платежей";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<div class="col-md-9">
	<div class="row">
		<div class="col-md-6">
			<a href=@Url.Action("FillUpBalance", "UserProfile")>
				<button class="lkTopBBtn">
					Пополнить счет
				</button>
			</a>
		</div>
		<div class="col-md-6">
			<a href=@Url.Action("RequestCash", "UserProfile")>
				<button class="lkTopBBtn">
					Вывести средства
				</button>
			</a>
		</div>
	</div>
</div>

<div class="col-md-9">
	<div class="lkBox">

		<div class="lkBoxCont">
			<div class="defaultTitle">
				История платежей
			</div>

			<div class="tableName">Выводимая сумма</div>

			<div class="lkInsetOverflow minusMargin">
				<div class="outerTable">
					<table class="defaultTable" width="100%">
						<tr class="tableHead">
							<td>Дата</td>
							<td>Тип платежей</td>
							<td>Описание платежа</td>
							<td>Сумма</td>
						</tr>
						@foreach (PaymentActionFullInfo action in Model)
						{
							<tr>
								<td align="center">@Html.DisplayFor(c => action.PaymentAction.StartedOn, String.Format("{{0: {0} }}", CultureInfo.CurrentCulture.DateTimeFormat.FullDateTimePattern))</td>
								<td>@Html.DisplayFor(c => action.PaymentActionType.Name)</td>
								<td>@Html.DisplayFor(c => action.PaymentAction.Comment)</td>
								<td align="right">@Html.DisplayFor(c => action.PaymentAction.AmountOfMoney)</td>
							</tr>
						}
					</table>
				</div>
			</div>

			<div class="buttonsBox">
				<a href="/" class="defaultButton coloredBtn white-text">На главную</a>
			</div>
		</div>

	</div>
</div>
