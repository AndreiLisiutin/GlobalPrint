@using GlobalPrint.ServerBusinessLogic.Models.Business.Payments
@using Resources.ClientWeb.UserProfile
@model List<PaymentActionFullInfo>

@{
    ViewBag.Title = MyPaymentsViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger container margin-top-20">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, Resources.Resource.ValidationErrors + ": ")
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-xs-1">@MyPaymentsViewResource.PaymentDateHeader</th>
                <th class="col-xs-2">@MyPaymentsViewResource.PaymentTypeHeader</th>
                <th class="col-xs-8">@MyPaymentsViewResource.PaymentDescriptionHeader</th>
                <th class="col-xs-1">@MyPaymentsViewResource.PaymentSumHeader</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PaymentActionFullInfo action in Model)
            {
                <tr>
                    <td class="col-xs-1">@Html.DisplayFor(c => action.PaymentAction.StartedOn, "{0:dd.MM.yyyy HH:mm:ss}")</td>
                    <td class="col-xs-2">@Html.DisplayFor(c => action.PaymentActionType.Name)</td>
                    <td class="col-xs-8">@Html.DisplayFor(c => action.PaymentAction.Comment)</td>
                    <td class="col-xs-1">@Html.DisplayFor(c => action.PaymentAction.AmountOfMoney)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
