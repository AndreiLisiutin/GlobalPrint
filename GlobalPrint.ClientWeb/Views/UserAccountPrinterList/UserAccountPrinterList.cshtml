@using GlobalPrint.Server
@model List<Printer>
@{
    ViewBag.Title = "Принтеры";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@{int rowNo = 0;}
<div class="container">
    @using (Html.BeginForm("AddPrinter", "Printer", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, "Ошибки: ")
            </div>
        }

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-1">№</th>
                    <th class="col-md-3">Название</th>
                    <th class="col-md-5">Расположение</th>
                    <th class="col-md-2">Цена ч/б печать руб/стр</th>
                    <th class="col-md-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Printer printer in Model)
                {
                    <tr>
                        <td class="col-md-1" scope="row">@(rowNo += 1)</td>
                        <td class="col-md-3">@Html.DisplayFor(c => printer.Name)</td>
                        <td class="col-md-5">@Html.DisplayFor(c => printer.Location)</td>
                        <td class="col-md-2">@Html.DisplayFor(c => printer.BlackWhitePrintPriceInCurrency)</td>
                        <td class="col-md-1">
                            @using (Html.BeginForm("EditPrinter", "Printer", FormMethod.Get, new { @class = "form-horizontal" }))
                            {
                                @Html.Hidden("PrinterID", printer.PrinterID, new { })
                                <button class="btn btn-default" type="submit" value="EditPrinter" name="action:EditPrinter">Изменить</button>
                                <button class="btn btn-default" type="submit" value="DelPrinter" name="action:DelPrinter">Удалить</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-sm-10">
                <button class="btn btn-default" type="submit" value="AddPrinter" name="action:AddPrinter">Добавить</button>
            </div>
        </div>
    }
</div>
