@using GlobalPrint.ServerBusinessLogic.BusinessLogicLayer.Models.Domain.Printers
@model List<Printer>
@{
    ViewBag.Title = "Принтеры";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@{int rowNo = 0;}
<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">№</th>
                <th class="col-md-3">Название</th>
                <th class="col-md-5">Расположение</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Printer printer in Model)
            {
                <tr>
                    <td class="col-md-1" scope="row">@(rowNo += 1)</td>
                    <td class="col-md-3">@Html.DisplayFor(c => printer.Name)</td>
                    <td class="col-md-4">@Html.DisplayFor(c => printer.Location)</td>
                    <td class="col-md-2">
                        @Html.ActionLink("Изменить", "Edit", "Printer", new { PrinterID = printer.ID }, new { @class = "btn btn-default" })
                        @using (Html.BeginForm("Delete", "Printer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <input type="hidden" name="printerID" value="@printer.ID" />
                            <input type="submit" class="btn btn-default delete-printer" value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-sm-10">
            @Html.ActionLink("Добавить", "Create", "Printer", new { }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
