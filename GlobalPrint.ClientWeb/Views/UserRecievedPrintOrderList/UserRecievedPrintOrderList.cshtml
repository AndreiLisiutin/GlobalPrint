@using GlobalPrint.Server
@using GlobalPrint.ClientWeb
@using GlobalPrint.Server.Utilities
@model List<PrintOrderInfo>
@{
    ViewBag.Title = "Принятые Заказы";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@{int rowNo = 0;}
<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger container margin-top-20">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, "Ошибки: ")
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">№</th>
                <th class="col-md-1">Номер заказа</th>
                <th class="col-md-1">Принтер</th>
                <th class="col-md-2">Документ</th>
                <th class="col-md-1">Дата заказа</th>
                <th class="col-md-1">Цена заказа</th>
                <th class="col-md-2">Статус</th>
                <th class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (PrintOrderInfo printOrder in Model)
            {
                <tr>
                    <td class="col-md-1" scope="row">@(rowNo += 1)</td>
                    <td class="col-md-1">@Html.DisplayFor(c => printOrder.PrintOrder.PrintOrderID)</td>
                    <td class="col-md-1">@Html.DisplayFor(c => printOrder.Printer.Name)</td>
                    <td class="col-md-2">@Html.DisplayFor(c => printOrder.PrintOrder.DocumentName)</td>
                    <td class="col-md-1">@Html.DisplayFor(c => printOrder.PrintOrder.OrderedOn, "{0:dd.MM.yyyy HH:mm:ss}")</td>
                    <td class="col-md-1">@Html.DisplayFor(c => printOrder.PrintOrder.Price, "{0:0.00}")</td>
                    <td class="col-md-2">@Html.DisplayFor(c => printOrder.Status.Status)</td>
                    @if (printOrder.PrintOrder.PrintOrderStatusID == (int)PrintOrderStatusEnum.Waiting)
                    {
                        <td class="col-md-3">
                            <div class="form-group">
                                <div class="col-md-5">
                                    @using (Html.BeginForm("AcceptOrder", "UserRecievedPrintOrderList", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.Hidden("printOrderID", printOrder.PrintOrder.PrintOrderID, new { @class = "btn btn-default" })
                                        <input type="submit" value="Принять" class="btn btn-default" />
                                    }
                                </div>
                                <div class="col-md-7">
                                    @using (Html.BeginForm("RejectOrder", "UserRecievedPrintOrderList", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.Hidden("printOrderID", printOrder.PrintOrder.PrintOrderID, new { @class = "btn btn-default" })
                                        <input type="submit" value="Отклонить" class="btn btn-default" />
                                    }
                                </div>
                            </div>
                        </td>
                    }
                    else if (printOrder.PrintOrder.PrintOrderStatusID == (int)PrintOrderStatusEnum.Accepted)
                    {
                        <td class="col-md-3">
                            <div class="form-group">
                                <div class="col-md-5">
                                    @using (Html.BeginForm("DownloadOrder", "UserRecievedPrintOrderList", FormMethod.Get, new { @class = "form-horizontal" }))
                                    {
                                        @Html.Hidden("printOrderID", printOrder.PrintOrder.PrintOrderID, new { @class = "btn btn-default" })
                                        <input type="submit" value="Скачать" class="btn btn-default" />
                                    }
                                </div>
                                <div class="col-md-7">
                                    @using (Html.BeginForm("ConfirmPrintOrder", "UserRecievedPrintOrderList", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.Hidden("printOrderID", printOrder.PrintOrder.PrintOrderID, new { @class = "btn btn-default" })
                                        <input type="submit" value="Распечатать" class="btn btn-default" />
                                    }
                                </div>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td class="col-md-3"></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
