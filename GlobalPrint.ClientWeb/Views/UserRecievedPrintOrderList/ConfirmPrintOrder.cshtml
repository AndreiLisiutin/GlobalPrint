@using GlobalPrint.ServerBusinessLogic.Models.Business.Orders
@using Resources.ClientWeb.UserProfile

@model PrintOrderInfo
@{
    ViewBag.Title = ConfirmPrintOrderViewResource.FormTabTitle;
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("PrintOrder", "UserRecievedPrintOrderList", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, Resources.Resource.ValidationErrors + ": ")
            </div>
        }
        <h2>@ConfirmPrintOrderViewResource.EnterSecretCode</h2>
        @Html.Hidden("printOrderID",  Model.PrintOrder.ID)
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.SecretCodeFieldLabel</label>
            <div class="col-sm-9">
                @Html.TextBox("secretCode", null, new { @class = "form-control" })
            </div>
        </div>
        <h2>Данные о заказе</h2>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.OrderNumberFieldLabel</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.PrintOrder.ID, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.PrinterNameFieldLabel</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.Printer.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.PrinterLocationFieldLalel</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.Printer.Location, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.DocumentFieldLalel</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.PrintOrder.DocumentName, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label text-left">@ConfirmPrintOrderViewResource.PriceFieldLalel</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(e => e.PrintOrder.PriceInCurrency, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <input type="submit" value=@ConfirmPrintOrderViewResource.PrintButtonLabel class="btn btn-default" />
            </div>
        </div>
    }
</div>



