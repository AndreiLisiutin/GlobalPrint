@using GlobalPrint.Server
@using GlobalPrint.Server.Utilities
@model List<PrintOrderInfo>
@{
    ViewBag.Title = "Мои Заказы";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}
@{int rowNo = 0;}
<div class="container">
    @using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger container margin-top-20">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, "Ошибки: ")
            </div>
        }

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-1">№</th>
                    <th class="col-md-2">Принтер</th>
                    <th class="col-md-3">Документ</th>
                    <th class="col-md-2">Дата заказа</th>
                    <th class="col-md-2">Цена заказа</th>
                    <th class="col-md-2">Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PrintOrderInfo printOrder in Model)
                {
                    <tr>
                        <td scope="row">@(rowNo += 1)</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.PrinterID)</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.DocumentName)</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.OrderedOn, "{0:dd.MM.yyyy HH:mm:ss}")</td>
                        <td>@Html.DisplayFor(c => printOrder.PrintOrder.Price, "{0:0.00}")</td>
                        <td>@Html.DisplayFor(c => printOrder.Status.Status)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
